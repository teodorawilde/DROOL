<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Drool Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
    <link href="~/Content/bootstrap-select.min.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" >
        <div class="container">
            <div class="navbar-header" style="font-family: Wide Latin;">
                <style>
                    div.navbar-header {
                        
                        background-image: -ms-linear-gradient(right, #6B6B6B 0%, #09090A 100%);
                        /* Mozilla Firefox */
                        background-image: -moz-linear-gradient(right, #6B6B6B 0%, #09090A 100%);
                        /* Opera */
                        background-image: -o-linear-gradient(right, #6B6B6B 0%, #09090A 100%);
                        /* Webkit (Safari/Chrome 10) */
                        background-image: -webkit-gradient(linear, right top, left top, color-stop(0, #6B6B6B), color-stop(1, #09090A));
                        /* Webkit (Chrome 11+) */
                        background-image: -webkit-linear-gradient(right, #6B6B6B 0%, #09090A 100%);
                        /* W3C Markup, IE10 Release Preview */
                        background-image: linear-gradient(to left, #6B6B6B 0%, #09090A 100%);
                    }

                </style>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" >
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("DROOL", "Drool", "Home", null, new { @class = "navbar-brand" })
            </div>            
            <div class="navbar-collapse collapse" >
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Converter", "Converter", "Home")</li>
                    <li>@Html.ActionLink("Comparer", "Comparer", "Home")</li>
                    <li>@Html.ActionLink("Visualizer", "Visualizer", "Home")</li>
                    <li class="cp">@Html.ActionLink("Documentation", "DocumentationEn", "Home")</li>
                    <li class="cpt">@Html.ActionLink("User Guide", "UserGuideEn", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div style="min-height:550px">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Drool Application - Teodora Olaru & Mihaela Coman</p>
            <style>
                  footer {
                            background-color: white;
                            color: dimgrey;
                            display: block;
                            width: 100%;
                            padding: 0;
                            margin-bottom: 18px;
                            font-size: 0.8em;
                            line-height: inherit;
                            border: 0;
                            border-bottom: 1px solid #e5e5e5;
                         }
                @@media all and (max-width: 2000px) and (min-width: 699px)
                { .cp{
                      margin-left:500px;
                  }
                 }
                @@media all and (max-width: 2000px) and (min-width: 699px) {
                    .dsv {
                        margin-left: 400px;
                    }
                }
            </style>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")

    <script src="http://code.jquery.com/jquery-1.10.2.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.3.5/bootstrap-select.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular.min.js"></script>
    <script src="~/Scripts/bootstrap-select-angular.js"></script>

    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        $(window).on('load', function () {
            $('.selectpicker').selectpicker({
                width: 75
            });
        });
    </script>
</body>
</html>
